<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gtsarandum.syncc" >

    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Syncc" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="com.tyczj.extendedcalendarview.CalendarProvider"
            android:authorities="com.tyczj.extendedcalendarview.calendarprovider" />

        <activity
            android:name=".LiveLoginActivity"
            android:label="@string/title_activity_live_login"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="gtsarandum.syncc.MainActivity" />
        </activity>
        <activity
            android:name=".DayEventsDisplayActivity"
            android:label="@string/title_activity_day_events_display"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="gtsarandum.syncc.MainActivity" />
        </activity>
        <activity
            android:name=".CreateNewCalendarEventActivity"
            android:label="@string/title_activity_create_new_calendar_event"
            > <!-- android:parentActivityName=".MainActivity"  -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="gtsarandum.syncc.MainActivity" />
        </activity>
    </application>

</manifest>
